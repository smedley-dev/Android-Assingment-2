<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/Lettuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/L"
        android:textColor="@color/Lettuce"
        android:onClick="fruitClick"
        android:textSize="@dimen/medium_text"
        android:textStyle="italic"
        android:tag="Lettuce"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fruitClick"
        android:text="@string/A"
        android:tag="Apple"
        android:textColor="@android:color/holo_red_dark"
        android:textColorLink="@android:color/holo_red_dark"
        android:textSize="@dimen/medium_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fruitClick"
        android:text="@string/B"
        android:tag="Banana"
        android:textColor="@color/Banana"
        android:textColorLink="@color/Banana"
        android:textSize="@dimen/medium_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apple" />

    <TextView
        android:id="@+id/Grape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/G"
        android:tag="Grape"
        android:textColor="@color/Grape"
        android:onClick="fruitClick"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/Banana"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/Watermelon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/W"
        android:tag="Watermelon"
        android:textColor="@color/Watermelon"
        android:onClick="fruitClick"
        android:textSize="@dimen/medium_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/showList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show List"
        android:onClick="btnNewActivity_click"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Lettuce"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>